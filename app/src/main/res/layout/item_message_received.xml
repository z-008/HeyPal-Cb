<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palak"
        android:textSize="12sp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp" />

    <TextView
        android:id="@+id/text_message_body"
        android:text="hi man, how are you?"
        android:background="@drawable/rounded_rectangle_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/text_message_name"
        tools:layout_editor_absoluteX="48dp"
        android:layout_below="@+id/text_message_time"
        android:layout_toEndOf="@+id/text_message_name" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/text_message_body"
        android:layout_marginLeft="135dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
        android:layout_below="@+id/text_message_name"
        android:layout_toEndOf="@+id/text_message_body" />

</RelativeLayout>